---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import SampleReactComponent from '../components/SampleReactComponent';
---

<Layout title="Welcome to Astro.">
  <main class="m-1 p-1 mx-auto text-center">
    <h1 class="text-3xl">
      Welcome to <span class="text-gradient">Astro</span>
    </h1>
    <ul role="list" class="link-card-grid">
      <Card
        title="Hello astro component"
        body="This is an astro component"
        href=""
      />
      <SampleReactComponent client:load />
    </ul>
  </main>
</Layout>
